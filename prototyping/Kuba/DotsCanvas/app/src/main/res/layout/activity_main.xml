<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/background"
    tools:context="ca.brocku.dotscanvas.app.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/text"
        android:id="@+id/score_textView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15"
        android:textColor="@color/text"
        android:id="@+id/missed_textView"/>

    <ca.brocku.dotscanvas.app.GameSurfaceView
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:id="@+id/game_surfaceView"/>

    <ca.brocku.dotscanvas.app.views.SVGView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        app:asset_filename="pause.svg"/>

</LinearLayout>
