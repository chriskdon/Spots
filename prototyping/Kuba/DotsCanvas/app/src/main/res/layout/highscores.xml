<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/highscores_title"
        android:textSize="25pt"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textAllCaps="true"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/lbl_Highscore1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="300"
            android:textSize="80dp"
            android:textColor="#f1c40f"
            android:gravity="center"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/lbl_Highscore2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="258"
            android:textSize="70dp"
            android:textColor="#95a5a6"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/lbl_Highscore3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="200"
            android:textSize="60dp"
            android:textColor="#e67e22"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/lbl_Highscore4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="50dp"
            android:textColor="#E8E8E8"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/lbl_Highscore5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="40dp"
            android:textColor="#E8E8E8"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:visibility="invisible"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textSize="15dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/btnResetHighScore"
            android:background="@android:color/transparent"
            android:textColor="@color/text"
            android:layout_gravity="bottom|center" />
    </LinearLayout>
</LinearLayout>