<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="dev.spots.app.MainMenuActivity">

    <!-- Main content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:padding="30dp">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@null"
                android:src="@drawable/title" />
        </LinearLayout>

        <!--
            TODO: Make this a swipe up to play button that looks like
            a move from the game.
        -->
        <ImageButton
            android:id="@+id/btn_StartLifeGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="60dp"
            android:background="@null"
            android:src="@drawable/button_big_play" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="High Scores"
            android:id="@+id/main_menu_highscores"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:background="@null"
            android:src="@drawable/button_highscore" />

    </LinearLayout>

    <!-- Dimming overlay -->
    <FrameLayout
        android:id="@+id/dim_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transluscent_black"
        android:visibility="invisible">
    </FrameLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/info_button"
        android:layout_gravity="bottom|center"
        android:background="@null"
        android:layout_marginBottom="20dp"
        android:id="@+id/btnInfoScreen"
        />
</FrameLayout>
