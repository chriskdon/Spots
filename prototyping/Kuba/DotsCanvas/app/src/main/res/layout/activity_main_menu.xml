<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.brocku.dotscanvas.app.MainMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:padding="30dp">

        <ca.brocku.dotscanvas.app.views.SVGImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:asset_filename="@string/svg_title_path" />
    </LinearLayout>

    <ca.brocku.dotscanvas.app.views.SVGImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        app:normal_asset_filename="@string/svg_timedButton_normal_path"
        app:touch_asset_filename="@string/svg_timedButton_touched_path" />

    <ca.brocku.dotscanvas.app.views.SVGImageButton
        android:id="@+id/btn_StartLifeGame"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        app:normal_asset_filename="@string/svg_lifeButton_normal_path"
        app:touch_asset_filename="@string/svg_lifeButton_touched_path" />

    <ca.brocku.dotscanvas.app.views.SVGImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        app:normal_asset_filename="@string/svg_settingsButton_normal_path"
        app:touch_asset_filename="@string/svg_settingsButton_touched_path" />
</LinearLayout>
